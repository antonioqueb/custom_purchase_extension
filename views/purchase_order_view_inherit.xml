<odoo>
    <data>
        <!-- Vista del formulario de Orden de Compra -->
        <record id="view_order_form_inherit_custom" model="ir.ui.view">
            <field name="name">purchase.order.form.custom.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <!-- Añadiendo un nuevo grupo al final del formulario para los campos 'planta' e 'is_authorized' -->
                <xpath expr="//sheet" position="inside">
                    <group string="Información Adicional">
                        <field name="planta"/>
                        <field name="is_authorized"/>
                    </group>
                </xpath>
            </field>
            <field name="priority" eval="20"/>
        </record>

        <!-- Vista de árbol de Orden de Compra -->
        <record id="view_order_tree_inherit_custom" model="ir.ui.view">
            <field name="name">purchase.order.tree.custom.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <!-- Añadiendo los campos 'planta' e 'is_authorized' en la vista de árbol -->
                <xpath expr="//field[@name='date_order']" position="after">
                    <field name="planta"/>
                </xpath>
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="is_authorized"/>
                </xpath>
            </field>
            <field name="priority" eval="20"/>
        </record>
    </data>
</odoo>
